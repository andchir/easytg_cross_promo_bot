DB_NAME=easytg_cross_promo_bot
DB_USER_NAME=easytg_cross_promo_bot
DB_USER_PASSWORD=xxx
BOT_TOKEN=xxx
ADMIN_USER_ID=xxx

# Bot mode: "polling" (default) or "webhook"
BOT_MODE=polling

# Webhook configuration (required only when BOT_MODE=webhook)
# Public URL for webhook (e.g., https://example.com:8443)
WEBHOOK_URL=
# Port to listen on (443, 80, 88, or 8443)
WEBHOOK_PORT=8443
# Secret token for webhook security (optional but recommended)
WEBHOOK_SECRET_TOKEN=
# Path to SSL certificate file (optional, for direct webhook without reverse proxy)
WEBHOOK_CERT=
# Path to SSL private key file (optional, for direct webhook without reverse proxy)
WEBHOOK_KEY=